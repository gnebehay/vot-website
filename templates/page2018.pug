block append page_vars
    -var menu='Challenges';
    if page.metadata.submenu
        -submenu = page.metadata.submenu

block append page_vars
    -var menu='Challenges';
    if page.metadata.submenu
        -submenu = page.metadata.submenu

block append head
    title VOT2018 Challenge |
        = submenu

block submenu
    -var menu_items = { 'Home': '/vot2018/index.html',  'Dataset': '/vot2018/dataset.html' , 'Results': '/vot2018/results.html' , 'Trackers': '/vot2018/trackers.html', 'Program': '/vot2018/program.html', 'People': '/vot2018/people.html' };
    .navbar.navbar-default.navbar-static-top(role='navigation')
        .container
            .navbar-header
                a(class='navbar-brand' href='/vot2018/') VOT2018
            ul(class='nav navbar-nav nav-collapse')
                each val, key in menu_items
                    if submenu == key
                        li.active
                            a(href=val)= key
                    else
                        li
                            a(href=val)= key
            div(class='navbar-text navbar-right')
              a(class='navbar-conjunction' href='https://eccv2018.org/') ECCV2018, Munich, Germany

    .clearer
