extends page

block append page_vars
    -var menu='Challenges';
    if page.metadata.submenu
        -submenu = page.metadata.submenu

block append page_vars
    -var menu='Challenges';
    if page.metadata.submenu
        -submenu = page.metadata.submenu

block append head
    title VOT2022 Challenge |
        = submenu

block submenu
    -var menu_items = { 'Home': '/vot2022/index.html', 'Dataset': '/vot2022/dataset.html', 'Results': '/vot2021/results.html', 'Trackers': '/vot2021/trackers.html', 'Program': '/vot2022/program.html', 'People': '/vot2022/people.html' };
    .navbar.navbar-default.navbar-static-top(role='navigation')
        .container
            .navbar-header
                a(class='navbar-brand' href='/vot2022/') VOT2022
            ul(class='nav navbar-nav nav-collapse')
                each val, key in menu_items
                    if submenu == key
                        li.active
                            a(href=val)= key
                    else
                        li
                            a(href=val)= key
            div(class='navbar-text navbar-right')
              a(class='navbar-conjunction' href='https://eccv2022.ecva.net/') ECCV2022, Tel-Aviv, Israel

    .clearer
