extends page

block append page_vars
    -var menu='Challenges';
    if page.metadata.submenu
        -submenu = page.metadata.submenu

block append head
    title VOTS2024 Challenge | 
        = submenu

block submenu
    -var menu_items = { 'Home': '/vots2024/index.html', 'Participate': '/vots2024/participation.html', 'People': '/vots2024/people.html', 'VOT GenArt': '/vots2024/genart.html' };
    .navbar.navbar-default.navbar-static-top(role='navigation')
        .container
            .navbar-header
                a(class='navbar-brand' href='/vots2024/') VOTS2024
            ul(class='nav navbar-nav nav-collapse')
                each val, key in menu_items
                    if submenu == key
                        li.active
                            a(href=val)= key
                    else
                        li
                            a(href=val)= key
            div(class='navbar-text navbar-right')
              a(class='navbar-conjunction' href='https://iccv2023.thecvf.com/') &nbsp;

    .clearer
